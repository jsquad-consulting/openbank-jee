root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.java]
indent_style = space

[{*.jhm,*.xul,*.rng,*.qrc,*.wsdl,*.fxml,*.bpmn,*.pom,*.xslt,*.jrxml,*.ant,*.xsl,*.xsd,*.tld,*.jnlp,*.wadl,*.xml}]
indent_style = space

[{*.pyw,*.py}]
indent_style = space

[{*.yml,*.yaml}]
indent_size = 2

[{bowerrc,.babelrc,jest.config,.stylelintrc,.eslintrc,*.jsb3,*.jsb2,*.json}]
indent_size = 2
